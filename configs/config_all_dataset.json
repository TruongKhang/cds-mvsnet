{
    "name": "CDS-MVSNet",
    "n_gpu": 2,

    "arch": {
        "type": "CDSMVSNet",
        "args": {
            "refine": false,
            "ndepths": [64, 32, 8],
            "depth_interals_ratio": [4.0, 2.0, 1.0],
            "share_cr": false,
            "cr_base_chs": [8, 8, 8],
            "grad_method": "detach"
        }
    },
    "data_loader": [
      {
        "type": "DTULoader",
        "args": {
          "data_path": "/mnt/sdb/khang/dtu_dataset/train",
          "train_data_list": "lists/dtu/train.txt",
          "val_data_list": "lists/dtu/val.txt",
          "mode": "train",
          "num_srcs": 3,
          "num_depths": 256,
          "interval_scale": 0.8,
          "shuffle": true,
          "batch_size": 6
        }
      },
      {
        "type": "BlendedLoader",
        "args": {
          "data_path": "/mnt/sdb/khang/blendedmvs",
          "train_data_list": "lists/blended/training_list.txt",
          "val_data_list": "lists/blended/validation_list.txt",
          "mode": "train",
          "num_srcs": 3,
          "num_depths": 256,
          "interval_scale": 1.0,
          "shuffle": true,
          "batch_size": 6
        }
      }
    ],
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.01
        }
    },
    "loss": "final_loss",
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 35,
        "depth_scale": 1.0,
        "dlossw": [0.5, 1.0, 2.0],
        "eval_freq": 1,
        "save_dir": "dtu_blended_mvs"
    }
}
