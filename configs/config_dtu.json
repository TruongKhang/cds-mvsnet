{
    "name": "CDS-MVSNet",
    "n_gpu": 2,

    "arch": {
        "type": "CDSMVSNet",
        "args": {
            "num_stages": 4,
            "ndepths": [64, 32, 8, 4],
            "depth_interals_ratio": [4.0, 2.0, 1.0, 1.0],
            "share_cr": false,
            "cr_base_chs": [16, 8, 8, 8],
            "grad_method": "detach"
        }
    },
    "data_loader": [
      {
        "type": "DTULoader",
        "args":{
            "data_path": "/mnt/sdb/khang/dtu_dataset/train",
            "train_data_list": "lists/dtu/train.txt",
            "val_data_list": "lists/dtu/val.txt",
            "mode": "train",
            "num_srcs": 3,
            "num_depths": 256,
            "interval_scale": 0.8,
            "shuffle": true
        }
      }
    ],
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "weight_decay": 0.01
        }
    },
    "loss": "final_loss",
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 4,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "dtu",
        "dlossw": [1.0, 1.0, 1.0, 1.0]
    }
}
