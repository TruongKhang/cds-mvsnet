{
    "name":"CDS-MVSNet",
    "n_gpu": 1,

    "arch": {
        "type": "CDSMVSNet",
        "args": {
            "num_stages": 4,
            "ndepths": [80, 32, 8, 4],
            "depth_interals_ratio": [4.0, 2.5, 1.5, 1.0],
            "share_cr": false,
            "cr_base_chs": [8, 8, 8, 8],
            "grad_method": "detach"
        }
    },
    "data_loader": [
      {
        "type": "BlendedLoader",
        "args": {
          "data_path": "/mnt/sdb/khang/blendedmvs",
          "train_data_list": "lists/blended/training_list.txt",
          "val_data_list": "lists/blended/validation_list.txt",
          "mode": "train",
          "num_srcs": 3,
          "num_depths": 320,
          "interval_scale": 1.0,
          "shuffle": true,
          "batch_size": 6
        }
      }
    ],
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0.01
        }
    },
    "loss": "final_loss",
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "finetuning_blendedmvs",
        "lrepochs": "5,10,15:2",
        "dlossw": [0.5, 1.0, 2.0, 2.0],
        "eval_freq": 1
    }
}
